@{
  Layout = "_Layout";
}

@model LaMasDulce.Models.Flavor

<h4>Add a new flavor</h4>
@using (Html.BeginForm())
{
    @Html.Label("Flavor Name")
    @Html.TextBoxFor(model => model.FlavorName, new { @class = "form-control", required = "required" })

    <br>
    <br>
    @Html.Label("Qualified Treat")
    @Html.DropDownList("TreatId", ViewBag.TreatId as SelectList, "-- Select Treat --", new { @class = "form-control" })

    <br>
    <br>
    <input type="submit" value="Complete" class="btn btn-default" required="true" />
}